@{
    ViewData["Title"] = "Calculate Grades";
}

@model GradesModel;

<h2>Grade Calculator: </h2>
<p>Please enter your percentage for each grade (ie: 90, 95, 78)</p>


<form method="post">

    <label>Assignments:</label>
    <input id="assign" asp-for="Assign" /><br /><br />

    <label>Group Project:</label>
    <input id="gp" asp-for="Group" /><br /><br />

    <label>Quizzes:</label>
    <input id="qz" asp-for="Quiz" /><br /><br />

    <label>Exam:</label>
    <input id="ex" asp-for="Exam" /><br /><br />

    <label>INTEX:</label>
    <input id="intex" asp-for="Intex" /><br /><br />

    <input id="calc" type="submit" value="Calculate" />
    <br />

    <div asp-validation-summary="All"></div>

</form>
<br />

